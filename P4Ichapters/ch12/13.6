import urllib2
import json

#Prompts user to enter URL 
url = raw_input('Enter URL - ')

#Shortcuts user to specified webpage upon pressing enter
if len(url) < 1 : url =  'http://python-data.dr-chuck.net/comments_42.json'

#url handler to open, read,and pars json data
uh = urllib2.urlopen(url)
JsonData = uh.read()
ParsedData = json.loads(JsonData)
counts = []

comments = ParsedData["comments"]

for comment in comments:
    counts.append(comment['count'])
#returns results from counts and sums the data pulled
print "Count: {0}".format(len(counts))
print "Sum: {0}".format(sum(counts))
